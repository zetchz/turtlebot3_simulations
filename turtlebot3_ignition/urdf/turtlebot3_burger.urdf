<?xml version="1.0"?>
<!-- TurtleBot3 Burger -->
<robot name="turtulebot3_burger" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <link name="base_footprint">
    <pose>0 0 0.033 0 0 0</pose>
  </link>

  <link name="base_link">
    <pose>0 0 0.033 0 0 0</pose>
  </link>

  <link name="imu_link">
    <pose>0 0 0.068 0 0 0</pose>
  </link>

  <link name="base_scan">
    <pose>0 0 0.161 0 0 0</pose>
  </link>

  <link name="wheel_left_link">
    <pose>0 0.08 0.023 -1.57 0 0</pose>
  </link>

  <link name="wheel_right_link">
    <pose>0.0 -0.08 0.023 -1.57 0 0</pose>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.033" rpy="0 0 0" />
    <axis>
      <xyz>0 0 1</xyz>
    </axis>
  </joint>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0 0.08 0" rpy="-1.57 0 0" />
    <axis>
      <xyz>0 0 1</xyz>
    </axis>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 -0.08 0" rpy="-1.57 0 0" />
    <axis>
      <xyz>0 0 1</xyz>
    </axis>
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.035" rpy="0 0 0" />
    <axis>
      <xyz>0 0 1</xyz>
    </axis>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.032 0 0.128" rpy="0 0 0" />
    <axis>
      <xyz>0 0 1</xyz>
    </axis>
  </joint>
</robot>