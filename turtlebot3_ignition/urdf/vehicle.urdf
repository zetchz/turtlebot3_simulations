    </link>
    <joint name='altimeter_joint' type='fixed'>
        <parent link='sensor' />
        <child link='sensor/altimeter' />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <link name='sensor/air_pressure'>
        <pose>0 0 0.06 0 0 0</pose>
